<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified">

    <Dialog
        id="imageUploadDialog"
        title="Upload Product Image"
        contentWidth="400px"
        beforeOpen=".onBeforeOpen"
        afterClose=".onAfterClose">

        <content>
            <VBox id="_IDGenVBox1" class="sapUiMediumMargin">
                <u:FileUploader
                    id="imageFileUploader"
                    name="file"
                    uploadUrl=""
                    uploadOnChange="false"
                    change=".onFileChange"
                    width="100%"
                    placeholder="Select Image File:" />
                <Text
                    id="imageSelectedFileName"
                    text="No file selected"
                    class="sapUiTinyMarginTop sapUiSmallMarginBottom" />
                <Text id="_IDGenText" text="(JPG, PNG, GIF - Max 5MB)" class="sapUiTinyMarginTop" />
            </VBox>
        </content>

        <buttons>
            <Button id="_IDGenButton"
                text="Upload"
                type="Emphasized"
                press=".onUploadPress" />
            <Button id="_IDGenButton1"
                text="Remove Image"
                type="Transparent"
                press=".onRemoveImage" />
            <Button id="_IDGenButton2"
                text="Cancel"
                press=".onUploadCancel" />
        </buttons>

    </Dialog>

</core:FragmentDefinition>
