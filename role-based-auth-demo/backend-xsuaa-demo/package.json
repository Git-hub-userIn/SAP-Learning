{
  "name": "backend-xsuaa-demo",
  "version": "1.0.0",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "private": true,
  "cds": {
    "requires": {
      "auth": {
        "[production]": {
          "kind": "xsuaa"
        },
        "[development]": {
          "kind": "mocked",
          "users": {
            "admin": {
              "password": "admin",
              "roles": [
                "Admin"
              ]
            },
            "viewer": {
              "password": "viewer",
              "roles": [
                "Viewer"
              ]
            },
            "greeter": {
              "password": "greeter",
              "roles": [
                "Greeter"
              ]
            }
          }
        }
      }
    }
  }
}
